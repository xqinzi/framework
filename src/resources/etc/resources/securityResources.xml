<?xml version="1.0"?>

<securityResources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="securityResources.xsd">
	<filter>
		<excludePatterns>
			<pattern>*loginSession*</pattern>
            <pattern>/</pattern>
            <pattern>/index.jsp</pattern>
            <pattern>/mainPage.jsp</pattern>
            <pattern>/loginPage.jsp</pattern>
            <pattern>/headerPage.jsp</pattern>
            <pattern>/footerPage.jsp</pattern>
            <pattern>/errorPage.jsp</pattern>
		</excludePatterns>
	</filter>
	<session>
		<class>br.com.concepting.framework.security.model.LoginSessionModel</class>
		<timeout>50</timeout>
	</session>
</securityResources>