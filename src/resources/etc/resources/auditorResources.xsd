<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified">
	<xs:element name="auditorResources">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="auditor" maxOccurs="unbounded" minOccurs="1">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="appenders">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="appender">
											<xs:complexType>
												<xs:sequence>
													<xs:element name="options">
														<xs:complexType>
															<xs:sequence>
																<xs:element name="option" maxOccurs="unbounded" minOccurs="0">
																	<xs:complexType>
																		<xs:simpleContent>
																			<xs:extension base="xs:string">
																				<xs:attribute type="xs:string" name="id" use="required"/>
																				<xs:attribute type="xs:string" name="value" use="required"/>
																			</xs:extension>
																		</xs:simpleContent>
																	</xs:complexType>
																</xs:element>
															</xs:sequence>
														</xs:complexType>
													</xs:element>
												</xs:sequence>
												<xs:attribute type="xs:string" name="class" use="required"/>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute type="xs:string" name="id" use="requred"/>
						<xs:attribute type="xs:string" name="level" use="required"/>
						<xs:attribute type="xs:string" name="default" use="optional"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>